/**
 * Computes the sum of three bits.
 */

CHIP FullAdder {
    IN a, b, c;  // 1-bit inputs
    OUT sum,     // Right bit of a + b + c
        carry;   // Left bit of a + b + c

    // sum = a + b + c

    PARTS:
    Xor(a=a, b=b, out=tmp);
    Xor(a=tmp, b=c, out=sum);
    And(a=b, b=c, out=bandc);
    Or(a=b, b=c, out=borc);
    Mux(a=bandc, b=borc, sel=a, out=carry);
}